<% layout('../layout') -%>

<h1><%= document.title %></h1>
<p>
  <%= document.body %>
</p>

<a href="/document/edit/<%= document._id %>">
  <button class="btn btn-primary">Edit Document</button>
</a>
<form action='/document/delete' method="POST">
  <input type="hidden" name="documentId" value="<%= document._id %>">
  <button type="submit" class="btn btn-primary">Delete</button>
</form>